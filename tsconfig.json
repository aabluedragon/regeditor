{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2019",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./lib",
    "composite": false,
    "strict": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "baseUrl": "./src",
    "paths": {
      "*": ["./typings/*"]
    },
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "test/**/*"
  ]
}
